# Backend Configuration - Production Stage

# Server Configuration
PORT=3000
NODE_ENV=production

# Frontend URL (for CORS)
FRONTEND_URL=https://your-production-app.com

# Database Configuration (Production DB)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/monospace_prod

# Supabase Configuration
SUPABASE_URL=https://your-prod-project.supabase.co
SUPABASE_ANON_KEY=your-prod-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-prod-supabase-service-role-key

# Auth0 Configuration
AUTH0_DOMAIN=your-prod-tenant.auth0.com
AUTH0_CLIENT_ID=your-prod-auth0-client-id
AUTH0_CLIENT_SECRET=your-prod-auth0-client-secret
AUTH0_AUDIENCE=your-prod-auth0-api-audience

# JWT Configuration
SUPABASE_JWT_SECRET=your-prod-supabase-jwt-secret
JWT_SECRET=your-prod-secret-jwt-key
JWT_EXPIRES_IN=1d

# MikroORM Configuration
MIKRO_ORM_CLIENT_URL=${DATABASE_URL}
MIKRO_ORM_ENTITIES=dist/**/*.entity.js
MIKRO_ORM_MIGRATIONS_PATH=./migrations
